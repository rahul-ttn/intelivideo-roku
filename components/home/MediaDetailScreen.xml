				ellipsizeOnBoundary="true"/>
				
			<Label id="labelMediaTime" translation="[200,180]" color="0xffffffff"/>
			
			<RelatedMediaRowList id="relatedMediaRowList" translation="[200,600]" visible="false"/>

		</Rectangle>

		<Timer id="timer" repeat="false" duration=".5" />

	</children>
