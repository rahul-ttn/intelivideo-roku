				vertAlign = "center"
				color = "0x1c2833ff"/>
		</Rectangle>
		
		<Rectangle
			id = "resetPasswordButtonrectangle"
			width="350"
			height = "80"
			color="0xB4B4B1ff">
			
			<Button
				id="buttonResetPassword"
				height = "50"
			  	translation="[0,0]"
			  	textFont = "font:LargeSystemFont"
			  	iconUri=""
				focusedIconUri=""
				focusBitmapUri="pkg:/images/img_transparent"
				focusFootprintBitmapUri="pkg:/images/img_transparent"
				/>
			
			 <Label
				id = "resetPasswordLabel"
				text = "Reset Password"
				height = "80"
				width="350"
				horizAlign = "center"
				vertAlign="center"
				color = "0xffffffff">
			</Label> 
			
			<BusySpinner 
			      id = "exampleBusySpinner" 
			      visible = "false" />
		</Rectangle>
		<Rectangle   			
		 	id="keyboardTheme"   			
		 	color="#252222"   			
		 	width="1400"  			
		 	height="450"   			
		 	translation="[225,450]" 
		 	visible = "false">
