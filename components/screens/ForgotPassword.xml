    		translation="[0.0,200]">
    		<Label
				id = "oopsLabel"
				text = "Oops!"
				width = "1920"
				horizAlign = "center"
				vertAlign = "center"
				visible = "false"></Label>
			<Label
				id = "errorLabel"
				text = "Please enter a valid email and try again."
				width = "1920"
				horizAlign = "center"
				vertAlign = "center"
				font = "font:SmallBoldSystemFont"
				translation="[0.0,120]"
				visible="false"></Label>
			<Label
				id = "labelWelcome"
				text = "WELCOME"
				width = "1920"
				horizAlign = "center"
				vertAlign = "center"
