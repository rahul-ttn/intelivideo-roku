					id = "keyboard"
					translation = "[0.0,0.0]"
				    showTextEditBox = "true"
				    keyboardBitmapUri = "pkg:/images/KeyboardTemplatebgfhd"
				    visible = "false"
				    focusedKeyColor = "0x000000ff">
				</Keyboard>
