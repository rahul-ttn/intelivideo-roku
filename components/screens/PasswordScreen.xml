	<interface>
		<field id="account" type="node" alwaysNotify="true" onChange="updateSelectedAccount"/>
		<field id="emailId" type="string" />
	</interface>
	
	<children>
	
	 <Rectangle
    	id = "parentRectangle"
    	width="1920"
    	height = "1080"
    	translation = "[0,0]"
    	color = "0x2e86c100">
    	
    	<Rectangle
    		id = "welcomeRectangle"
    		width = "1920"
    		height = "150"
    		color = "0xf7dc6f00"
    		translation="[0.0,200]">
    		<Label
				id = "oopsLabel"
				text = "Oops!"
				width = "1920"
				horizAlign = "center"
				vertAlign = "center"
				visible = "false"></Label>
			<Label
				id = "errorLabel"
				text = "There was an error logging into your account.Please check your password and try again."
				width = "1920"
				horizAlign = "center"
				vertAlign = "center"
				font = "font:SmallBoldSystemFont"
				translation="[0.0,110]"
				visible="false"></Label>
			<Label
				id = "labelWelcome"
				text = "WELCOME"
				width = "1920"
				horizAlign = "center"
				vertAlign = "center"
				visible="true"></Label>
    	</Rectangle>
    	
    	
    	<Rectangle
			id = "editTextRectangle"
			width = "600"
			height = "60">
			<Button
				id="editTextButton"
				height = "50"
			  	translation="[0,0]"
			  	textFont = "font:LargeSystemFont"
			  	iconUri=""
				focusedIconUri=""
				focusBitmapUri="pkg:/images/img_transparent"
				focusFootprintBitmapUri="pkg:/images/img_transparent"/>
			<Label
		  		id = "hintlabel"
		  		text = "Password"
		  		width = "600"
		  		translation="[7,12]"
		  		horizAlign = "left"
				vertAlign = "center"
				ellipsizeOnBoundary = "false"
				color = "0x1c2833ff"/>
		</Rectangle>
		
		<Rectangle
			id = "nextButtonrectangle"
			width="170"
			height = "80"
			color="0xB4B4B1ff">
			
			<Button
				id="buttonLogin"
				height = "50"
			  	translation="[0,0]"
			  	textFont = "font:LargeSystemFont"
			  	iconUri=""
				focusedIconUri=""
				focusBitmapUri="pkg:/images/img_transparent"
				focusFootprintBitmapUri="pkg:/images/img_transparent"/>
			
			 <Label
				id = "buttonTextLabel"
				text = "Login"
				height = "80"
				width="170"
				horizAlign = "center"
				vertAlign="center"
				color = "0xffffffff">
			</Label> 
			
			<BusySpinner 
			      id = "exampleBusySpinner" 
			      visible = "false" />
		</Rectangle>
		
		<Rectangle
			id = "pinRectangle"
			height = "50"
			width = "1920"
			color="0xB4B4B100">
			<Button
			 	id = "buttonLoginPin"
			 	text = ""
			 	iconUri=""
			 	focusedIconUri=""
			 	height = "30"
			 	focusBitmapUri="pkg:/images/img_transparent"
				focusFootprintBitmapUri="pkg:/images/img_transparent"/>
			 <Label
			 	id = "pinLabel"
			 	text = "Login with PIN"
			 	height = "30"
				width = "1920"
				horizAlign="center"
				font = "font:MediumBoldSystemFont"
				color = "0xffffffff">
			 </Label>
		</Rectangle>
		
		<Rectangle
			id = "forgotPasswordRectangle"
			height = "50"
			width = "1920"
			color="0xB4B4B100">
			<Button
			 	id = "buttonForgotPassword"
			 	text = ""
			 	iconUri=""
			 	focusedIconUri=""
			 	height = "30"
			 	focusBitmapUri="pkg:/images/img_transparent"
				focusFootprintBitmapUri="pkg:/images/img_transparent"/>
			 <Label
			 	id = "forgotPasswordLabel"
			 	text = "Forgot Password?"
			 	height = "30"
				width = "1920"
				horizAlign="center"
				font = "font:MediumBoldSystemFont"
				color = "0xffffffff">
			 </Label>
		</Rectangle>
		
		
		 <Rectangle   			
		 	id="keyboardTheme"   			
		 	color="#252222"   			
		 	width="1400"  			
		 	height="450"   			
		 	translation="[225,450]" 
		 	visible = "false">
		<Keyboard
			id = "keyboard"
			translation = "[0,0]"
		    showTextEditBox = "true"
		    keyboardBitmapUri = "pkg:/images/KeyboardTemplatebgfhd"
		    visible = "false"
		    focusedKeyColor = "0x000000ff">
		</Keyboard></Rectangle>
