<?xml version="1.0" encoding="UTF-8"?>
<component name="WelcomeScreen" extends="Group"
	xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
	<script type="text/brightscript" uri="pkg:/source/constants/Constant.brs" />
	<script type="text/brightscript" uri="pkg:/source/constants/Strings.brs" />
	<script type="text/brightscript" uri="pkg:/source/constants/Logger.brs" />
	<script type="text/brightscript" uri="pkg:/source/utility/Utility.brs" />
	<script type="text/brightscript" uri="pkg:/source/Utility/FocusUtility.brs" />
	<script type="text/brightscript" uri="pkg:/components/signup/WelcomeScreen.brs" />

	<interface>
		<field type="Boolean" id="buttonFocus" alwaysNotify="true"
			onChange="onWelcomeScreen" />
	</interface>

	<children>

		<Poster id="welcomeScreenBackground" width="1960" height="1080"
			translation="[0,0]" uri="pkg:/images/splash_fhd.png" />

		<Rectangle id="loginRectangle" width="180" height="60"
			translation="[1600,100]">

			<Button id="loginButton" height="50" translation="[0,0]"
				textFont="font:LargeSystemFont" iconUri="" focusedIconUri=""
				focusBitmapUri="pkg:/images/img_transparent"
				focusFootprintBitmapUri="pkg:/images/img_transparent" />

			<Label id="loginLabel" text="Log In" height="60" width="180"
				horizAlign="center" vertAlign="center" color="0xffffffff">
			</Label>
		</Rectangle>

		<Poster id="accountLogo" width="200" height="200"
			uri="pkg:/images/ttnd.png" />

		<Rectangle id="welcomeRectangle" width="1920" height="150"
			color="0xf7dc6f00" translation="[0.0,350]">

			<Label id="labelNewWay" text="A new way to watch" width="1920"
				horizAlign="center" vertAlign="center" font="font:LargeBoldSystemFont" />

			<Label id="labelWatchAnywhere" text="WATCH ANYWHERE. CANCEL ANYTIME."
				width="1920" horizAlign="center" vertAlign="center" font="font:LargeSystemFont"
				translation="[0.0,80]" />
		</Rectangle>

		<Label id="labelDiscription" width="1000" wrap="true"
			lineSpacing="5" horizAlign="center" font="font:SmallSystemFont" />

		<Rectangle id="createAccountRectangle" width="450" height="80">

			<Button id="createAccountButton" height="50" translation="[0,0]"
				textFont="font:LargeSystemFont" iconUri="" focusedIconUri=""
				focusBitmapUri="pkg:/images/img_transparent"
				focusFootprintBitmapUri="pkg:/images/img_transparent" />

			<Label id="createAccountLabel" text="Start Watching Today"
				height="80" width="450" horizAlign="center" vertAlign="center"
				color="0xffffffff">
			</Label>
		</Rectangle>

		<Rectangle id="browseCatalogRectangle" width="350" height="80">

			<Button id="browseCatalogButton" height="50" translation="[0,0]"
				textFont="font:LargeSystemFont" iconUri="" focusedIconUri=""
				focusBitmapUri="pkg:/images/img_transparent"
				focusFootprintBitmapUri="pkg:/images/img_transparent" />

			<Label id="browseCatalogLabel" text="Browse Catalog" height="80"
				width="350" horizAlign="center" vertAlign="center" color="0xffffffff">
			</Label>
		</Rectangle>

	</children>
</component>
