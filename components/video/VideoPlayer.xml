<?xml version="1.0" encoding="UTF-8"?>
<component name="VideoPlayer" extends="Group"
	xsi:noNamespaceSchemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">
	<script type="text/brightscript" uri="pkg:/source/constants/Colors.brs" />
	<script type="text/brightscript" uri="pkg:/source/constants/Strings.brs" />
	<script type="text/brightscript" uri="pkg:/source/constants/Constant.brs" />
	<script type="text/brightscript" uri="pkg:/source/constants/Logger.brs" />
	<script type="text/brightscript" uri="pkg:/source/utility/Utility.brs" />
	<script type="text/brightscript" uri="pkg:/source/utility/RequestParamsUtility.brs" />
	<script type="text/brightscript" uri="pkg:/source/Utility/FocusUtility.brs" />
	<script type="text/brightscript" uri="pkg:/source/network/ApiConnection.brs" />
	<script type="text/brightscript" uri="pkg:/components/video/VideoPlayer.brs" />

	<interface>
		<field type="String" id="videoTitle"/>
		<field type="String" id="backgroundUri"/>
		<field type="String" id="resourceId" alwaysNotify="true"
			onChange="onResourceId" />
		<field type="integer" id="resourceIdSelected"/>
		<field type="nodearray" id="videoArray" alwaysNotify = "true" onChange="setVideoArray"/>
		
	</interface>

	<children>
		<Video id="videoPlayer" width="0.0" height="0.0" />
		<Poster id = "audioPoster" width = "1920" height="1080" visible="false" opacity="0.7">
		</Poster>
		<Rectangle
			id = "outerUpNextRectangle"
			width = "400"
			height = "170"
			color="0x85858500"
			translation="[1470,550]">
			<Label
				id = "labelUpNext"
				text = "Up Next"
				color="0xffffffff"
				translation="[0.0,0.0]">
			</Label>
			<Rectangle
				id = "upNextRectangle"
				width = "400"
				height = "150"
				translation = "[0,40]">
				<Poster id = "posterUpNext"
					uri = ""
					width = "170"
					height = "150"
					loadDisplayMode="scaleToFill">
				</Poster>
				<Label
					id = "labelTitle"
					text = ""
					width = "220"
					height = "150"
					ellipsizeOnBoundary="false"
					ellipsisText="..."
					wrap = "true"
					color = "0x000000ff"
					translation="[180,10]">
				</Label>
			</Rectangle>
		</Rectangle>
		<Timer id="timer" repeat="false" duration=".5" />
	</children>
</component>
